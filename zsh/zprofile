#
# Executes commands at login pre-zshrc.
#

# Tmux
# Set $TERM explicitly to force tmux to recognize 256 colors
export TERM=screen-256color-bce

# Browser
if [[ "$OSTYPE" == darwin* ]]; then
  export BROWSER='open'
fi

# Editors
export VISUAL='vim'
export EDITOR='vim'
export GIT_EDITOR='vim'
export PAGER='less'

# Paths
# Ensure path arrays do not contain duplicates.
typeset -gU cdpath fpath mailpath path

# Set the the list of directories that cd searches.
cdpath=(
  $HOME/Sites 
  $HOME/Source
  $cdpath
)

# Set the list of directories that Zsh searches for programs.
path=(
  $HOME/.cargo/bin
  $HOME/.composer/vendor/bin
  $HOME/.rbenv/bin
  /usr/local/{bin,sbin}
  /{bin,sbin}
  /usr/{bin,sbin}
  $path
)

# rbenv
eval "$(rbenv init -)"

# Add Heroku toolkit to PATH
export PATH="/usr/local/heroku/bin:$PATH"

# Use Homebrew-installed PHP, rather than system default
export PATH="$(brew --prefix homebrew/php/php70)/bin:$PATH"

# Set the default Less options.
export LESS='-i -R -w -X -F'

# Enable syntax highlighting when viewing files with Less.
# <http://ole.michelsen.dk/blog/syntax-highlight-files-macos-terminal-less.html>
LESSPIPE=`which src-hilite-lesspipe.sh`
export LESSOPEN="| ${LESSPIPE} %s"

# Allow Ctrl-S to be used as binding
stty -ixon
